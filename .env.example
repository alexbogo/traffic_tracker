# Database Configuration
DATABASE_URL="mysql://tracker_user:tracker_pass@mysql:3306/traffic_tracker?serverVersion=8.0&charset=utf8mb4"

# Application Environment (dev, prod, test)
APP_ENV=dev
APP_DEBUG=1

# Application Secret (change this in production!)
APP_SECRET=your-secret-key-change-this-in-production

# GeoIP Database Path
GEOIP_DATABASE_PATH="/usr/share/GeoIP/GeoLite2-Country.mmdb"

# CORS Configuration
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# Session Configuration
SESSION_LIFETIME=3600

